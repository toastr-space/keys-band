{
	"name": "keys.band",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"nodemon": "nodemon --watch src --watch static --ext .* --exec \"vite build & npx esbuild ./src/lib/services/background.ts --bundle --outdir=build/ & npx esbuild ./src/lib/services/content.ts --bundle --outdir=build/\"",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.27.4",
		"@tailwindcss/typography": "^0.5.10",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"daisyui": "^4.4.12",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.30.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"sveltekit-adapter-chrome-extension": "^2.0.0",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	},
	"type": "module",
	"dependencies": {
		"@iconify/svelte": "^3.1.4",
		"@sveltejs/vite-plugin-svelte": "^3.0.1",
		"esbuild": "^0.19.8",
		"nostr-tools": "^1.17.0",
		"qrcode": "^1.5.3",
		"vite-plugin-singlefile": "^0.13.5"
	}
}
