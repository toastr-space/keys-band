{
  "manifest_version": 3,
  "name": "Keys.Band",
  "version": "1.1.0",
  "description": "Nostr Nip07 implementation",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "assets/logo.png",
    "32": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "background": {
    "service_worker": "build/background.js"
  },
  "permissions": ["notifications", "storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["build/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "build/popup.js",
        "build/popup.css",
        "build/nostr-provider.js"
      ],
      "matches": ["https://*/*"]
    }
  ]
}
